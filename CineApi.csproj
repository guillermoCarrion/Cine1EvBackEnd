<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <!-- Framework de destino: .NET 8 -->
    <TargetFramework>net8.0</TargetFramework>
    <!-- Habilitar soporte para valores nulos -->
    <Nullable>enable</Nullable>
    <!-- Usar las directivas implícitas recomendadas para proyectos ASP.NET Core -->
    <ImplicitUsings>enable</ImplicitUsings>
    <!-- Nombre raíz del espacio de nombres -->
    <RootNamespace>CineApi</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <!-- Dependencia para Swagger (documentación de la API) -->
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.6.2" />
  </ItemGroup>

  <ItemGroup>
    <!-- Dependencias adicionales específicas del proyecto -->
    <!-- Agrega aquí cualquier otra referencia de paquete que necesites -->
  </ItemGroup>

</Project>